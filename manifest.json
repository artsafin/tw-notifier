{
  "name": "Teamwox Notifier",
  "manifest_version": 2,
  "version": "1.0",
  "homepage_url": "https://github.com/artsafin",

  "description": "Teamwox Notifier",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "*://tw.fxtm.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Enable/disable notifications",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
